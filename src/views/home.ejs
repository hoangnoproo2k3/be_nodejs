        <!-- loop foreach -->
        <% listUsers.forEach(function(user) { %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.name %>
                </td>
                <td>
                    <%= user.city %>
                </td>
                <td>
                    <span style="display: flex;"> <a href="/update/<%= user.id %>">Sửa</a>
                        <form style="margin: 0;padding: 0; padding-left: 10px;" action="/delete-user/<%= user.id %>"
                            method="Post">
                            <button>Xóa</button>
                        </form>
                    </span>
                </td>
            </tr>
            <% }); %>
    </table>
</body>

</html>