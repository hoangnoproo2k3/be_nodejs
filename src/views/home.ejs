<style>
    table {
        border-collapse: collapse;
        width: 100%;
        margin: 20px;
        padding: 30px;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: coral;
    }
</style>

<body>
    <ul>
        <li><a class="active" href="/">Home</a></li>
